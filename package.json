{
  "name": "ai-scene-editor",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace @ai-scene-editor/desktop",
    "build": "npm run build --workspace @ai-scene-editor/desktop",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "format": "prettier --check .",
    "format:write": "prettier --write ."
  },
  "devDependencies": {
    "prettier": "^3.4.2"
  },
  "dependencies": {
    "ajv-formats": "^3.0.1"
  }
}
